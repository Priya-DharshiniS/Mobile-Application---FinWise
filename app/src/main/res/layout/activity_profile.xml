<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".profile">


    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/royalpurple"
        android:drawableLeft="@drawable/profile_icon"
        android:padding="12dp"
        android:text="Hi "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Income"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textSize="20dp"
        android:textColor="@color/royalpurple"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/AddIncome"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_editor"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/purple" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Budget"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/royalpurple"/>

    <EditText
        android:id="@+id/AddBudget"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_editor"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/purple" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:text="Total Savings"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/royalpurple"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Savings"
        android:textSize="20dp"
        android:textColor="@color/royalpurple"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="14dp"/>

    <EditText
        android:id="@+id/TotalSavings"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_editor"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/purple" />

    <Button
        android:id="@+id/Savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/royalpurple"
        android:text="Save"
        android:textColor="@color/white" />


</LinearLayout>