<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Clickable Layout for Alarm Card -->
    <LinearLayout
        android:id="@+id/alarmClickableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <!-- Alarm Card View -->
        <androidx.cardview.widget.CardView
            android:id="@+id/alarmCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:padding="16dp"
            android:radius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <!-- Alarm Icon -->
                <ImageView
                    android:id="@+id/alarmIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_alarm"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp" />

                <!-- Alarm Text Box -->
                <LinearLayout
                    android:id="@+id/alarmTextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/alarmIcon"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/alarmTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp" />

                    <!-- Horizontal LinearLayout for Description and Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>

                        <android.widget.Switch
                            android:id="@+id/alarmSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:thumbTint="@color/purple"
                            android:trackTint="@drawable/switch_track"
                            android:checked="true"/>


                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
