<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Alarm Icon -->
    <ImageView
        android:id="@+id/alarmIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_alarm"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

    <!-- Alarm Text Box -->
    <LinearLayout
        android:id="@+id/alarmTextBox"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_toEndOf="@id/alarmIcon"
        android:background="@drawable/edge"
        android:padding="2dp">

        <TextView
            android:id="@+id/alarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <!-- Horizontal LinearLayout for Description and Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/alarmDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set your alarm"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <android.widget.Switch
                android:id="@+id/alarmSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:thumbTint="@color/purple"
                android:trackTint="@color/pink" />

        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>
</RelativeLayout>
